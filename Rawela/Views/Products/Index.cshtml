@model IEnumerable<Rawela.Models.Product>

@{
    var IsAuthenticated = HttpContext.Current.User.Identity.IsAuthenticated;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNoImage.cshtml";
}

@if (IsAuthenticated)
{
<div class="col-md-10 col-md-offset-1" style="padding-top:8%">
    <p>
        @Html.ActionLink("Nuevo", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
    </p>
    <table class="table table-bordered table-responsive table-striped ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.file)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img src="~/Content/Image/@item.file" width="100" height="100" />
                    @*@Html.DisplayFor(modelItem => item.file)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Imagenes", "AddImages", new { id = item.Id },htmlAttributes: new {@class="btn btn-default" })
                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default" })
                </td>
            </tr>
        }

    </table>
</div>

}