@model IEnumerable<Rawela.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_LayoutNoImage.cshtml";
}

<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 style="padding-bottom:3%">Nuestros Productos</h2>
                @*<hr class="glyphicon glyphicon-star">*@
            </div>
        </div>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-sm-4 portfolio-item">
                    <a href="/Home/DetailsView/@product.Id" class="portfolio-link" data-toggle="lightbox" data-id="@product.Id">
                        <div class="caption">
                            <div class="caption-content">
                                <i class="glyphicon glyphicon-search"></i>
                            </div>
                        </div>
                        <img id="img" src="~/Content/Image/@product.file" class="img-responsive img-fluid" alt="Cabin">
                    </a>
                </div>
            }
        </div>
    </div>
</section>
@Html.Partial("_footer")

